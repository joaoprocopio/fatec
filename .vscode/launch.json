{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Current File",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "program": "${workspaceFolder}/node_modules/.bin/tsx",
      "args": ["${relativeFile}"],
      "autoAttachChildProcesses": true,
      "smartStep": true
    }
  ]
}
